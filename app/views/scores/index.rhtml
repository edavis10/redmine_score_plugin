<h3>Scores for <%= @project.name -%></h3>

<% @score_groups.each do |group| -%>
<p><strong><%= group.name -%></strong>:

<% value = group.project_score_value(@project) %>
<%= value -%> - <%= ScoreOption.name_for(group,value) -%>

</p>
<% end -%>

<h3>Total: <%= @score_total -%> points</h3>

<p><%= link_to "Edit", :controller => 'scores', :action => 'edit', :id => @project -%></p>

